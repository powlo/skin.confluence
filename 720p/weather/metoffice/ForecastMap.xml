					              <texturenofocus>button-nofocus.png</texturenofocus>
					              <onclick>SetProperty(ForecastMap.LayerSelection, Rainfall)</onclick>
								  <onclick>RunScript(weather.metoffice, ForecastMap)</onclick>
							</control>
						</control>
						<control type="group">
							<width>50</width>
							<height>50</height>
